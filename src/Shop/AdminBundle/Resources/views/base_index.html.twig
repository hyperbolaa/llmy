{% extends "ShopAdminBundle::base.html.twig" %}

{% if thead is not defined %}
    {% set thead=['#'] %}
{% endif %}

{% block main_body %}
<div class="box">
    <div class="box-body">
        <div class="form-inline dt-bootstrap">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered table-hover dataTable">
                        <thead>
                        <tr role="row">
                            {% for head in thead %}
                                <th>{{ head }}</th>
                            {% endfor %}
                        </tr>
                        </thead>
                        <tbody>
                            {% for key,entity in entities %}
                                <tr>
                                    {% block tbody %}

                                    {% endblock %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            {% block paginator %}
                {%  include 'ShopAdminBundle::paginator.html.twig' %}
            {% endblock %}
        </div>
    </div>
</div>
{% endblock %}



{% block global_css %}
    <!-- jquery-ui 1.10.4 -->
    <link href="{{ asset('plugins/jQueryUI/jquery-ui.css') }}" rel="stylesheet" type="text/css" />
    <!-- Bootstrap 3.3.4 -->
    <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
    <!-- FontAwesome 4.3.0 -->
    <link href="{{ asset('css/font-awesome.min.css') }}" rel="stylesheet" type="text/css" />
    <!-- Ionicons 2.0.0 -->
    <link href="{{ asset('css/ionicons.min.css') }}" rel="stylesheet" type="text/css" />
    <!-- Date Picker -->
    <link href="{{ asset('plugins/datepicker/datepicker3.css') }}" rel="stylesheet" type="text/css" />
    <!-- Datetime Picker -->
    <link href="{{ asset('plugins/datetimepicker/bootstrap-datetimepicker.css') }}" rel="stylesheet" type="text/css" />
    <!-- Daterange picker -->
    <link href="{{ asset('plugins/daterangepicker/daterangepicker-bs3.css') }}" rel="stylesheet" type="text/css" />
    <!-- iCheck -->
    <link href="{{ asset('plugins/iCheck/flat/blue.css') }}" rel="stylesheet" type="text/css" />
    <!--database-->
    <link href="{{ asset('plugins/datatables/dataTables.bootstrap.css') }}" rel="stylesheet" type="text/css" />

    <!-- Theme style && AdminLTE Skins -->
    {% stylesheets '@ShopAdminBundle/Resources/public/css/AdminLTE.css'
                    '@ShopAdminBundle/Resources/public/css/skins/_all-skins.min.css'
                    '@ShopAdminBundle/Resources/public/css/select2.min.css'
                    filter='cssrewrite'%}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}



{% block global_js %}
    <!-- jQuery 2.1.4 -->
    <script src="{{ asset('plugins/jQuery/jQuery-2.1.4.min.js') }}"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="{{ asset('plugins/jQueryUI/jquery-ui.min.js') }}"></script>
    <!-- DATA TABES SCRIPT -->
    <script src="{{ asset('plugins/datatables/jquery.dataTables.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('plugins/datatables/dataTables.bootstrap.min.js') }}" type="text/javascript"></script>



    <!-- datepicker -->
    <script src="{{ asset('plugins/datepicker/bootstrap-datepicker.js') }}"></script>
    <!-- daterangepicker -->
    <script src="{{ asset('plugins/daterangepicker/moment.min.js') }}"></script>
    <script src="{{ asset('plugins/daterangepicker/daterangepicker.js') }}"></script>
    <!-- datetimepicker -->
    <script src="{{ asset('plugins/datetimepicker/bootstrap-datetimepicker.js') }}"></script>

    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    {% javascripts
        '@ShopAdminBundle/Resources/public/js/app.js'
        '@ShopAdminBundle/Resources/public/js/select2.min.js'
        '@ShopAdminBundle/Resources/public/js/footer.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        //自动识别样式
        (function(){
            var hf = window.location.href;
            var current_module = hf.match(/\/admin\/(\w+)\/?([^\?]*)/);
            if(current_module && current_module[1]){
                var mm = current_module[0].replace(/(^\s*)|(\s*$)/g, "");
                $('li.treeview').each(function () {
                    var menu = $(this).find('.treeview-menu li');
                    menu.each(function(){
                        var ss = $(this).find('a').attr('href');
                        if(ss == mm){
                            $(this).addClass('active');
                        }
                    });
                });
            }
        })();
    </script>
{% endblock %}




